@using RentalAppMVC.Data
@model IEnumerable<RentalAppMVC.Data.Property>
   @{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 text-center"></h1>

    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" />
                            }
                            <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text"><strong>Type:</strong> @item.Type</p>
                                <p class="card-text"><strong>Address:</strong> @item.Address</p>
                            <p class="card-text"><strong>Price:</strong> $@item.Price/month</p>
                                <div class="mt-3">
                                    <a asp-controller="Apartments" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">
                                        Details
                                    </a>
                                    <form asp-action="Rent" asp-controller="Apartments" asp-route-id="@item.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-primary btn-sm"
                                        @(item.IsAvailable ? "" : "disabled")>
                                            @(item.IsAvailable ? "Rent" : "Rented")
                                        </button>
                            </form>    
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
