@model RentalAppMVC.ViewModels.LandlordViewModel

@{
    ViewData["Title"] = "Landlord Contact Information";
}

<h2>Landlord Contact Information</h2>

<div class="card">
    <div class="card-body">
        <p><strong>Name:</strong> @Model.Landlord.Name</p>
        <p><strong>Email:</strong> @Model.Landlord.Email</p>
        <p><strong>Phone:</strong> @Model.Landlord.ContactNumber</p>
        <p><strong>Address:</strong> @Model.Landlord.Address</p>

        <form asp-action="Rent"
              asp-route-id="@Model.PropertyId"
              method="post">
            <button type="submit" class="btn btn-success">Rent This Property</button>
        </form>
    </div>
</div>