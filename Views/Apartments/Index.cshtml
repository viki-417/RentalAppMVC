@model IEnumerable<RentalAppMVC.DTOs.ApartmentDTO>

@{
    ViewData["Title"] = "Apartments List";
}

<h1>Apartments List</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Apartment</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FloorNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.HasElevator)
			</th>
            <th>
                @Html.DisplayNameFor(model => model.Pets)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Furnitured)
            </th> <th>
                @Html.DisplayNameFor(model => model.AC)
            </th> <th>
                @Html.DisplayNameFor(model => model.Balcony)
            </th> <th>
                @Html.DisplayNameFor(model => model.Garage)
            </th> <th>
                @Html.DisplayNameFor(model => model.Tv)
            </th> <th>
                @Html.DisplayNameFor(model => model.Wifi)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>

            <td>
                @Html.DisplayFor(modelItem => item.FloorNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.HasElevator)
				</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pets)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Furnitured)
                </td><td>
                    @Html.DisplayFor(modelItem => item.AC)
                </td><td>
                    @Html.DisplayFor(modelItem => item.Balcony)
                </td><td>
                    @Html.DisplayFor(modelItem => item.Garage)
                </td><td>
                    @Html.DisplayFor(modelItem => item.Tv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Wifi)
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                   <a> asp-action="Rent" asp-route-id="@item.Id" class="btn btn-success">Rent</a>
            </td>
        </tr>
}
    </tbody>
</table>
